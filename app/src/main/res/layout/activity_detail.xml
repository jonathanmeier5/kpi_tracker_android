<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.primedev.kpitracker.DetailActivity">

        <TextView
            android:id="@+id/location_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_name_header"
            android:fontFamily="sans-serif-medium"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/location_address_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_address_header"
            android:fontFamily="sans-serif-medium"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            />


        <TextView
            android:id="@+id/location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/location_zip_code_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_zip_code_header"
            android:fontFamily="sans-serif-medium"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/location_zip_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/location_notes_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_notes_header"
            android:fontFamily="sans-serif-medium"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/location_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="15dp"

            />

</LinearLayout>
